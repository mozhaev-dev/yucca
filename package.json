{
  "name": "yucca",
  "version": "0.1.0",
  "private": true,
  "description": "Minimalist P2P video conferencing platform",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter '@yucca/{shared,server,client}' dev",
    "client:dev": "pnpm --filter @yucca/client dev",
    "client:build": "pnpm --filter @yucca/client build",
    "client:preview": "pnpm --filter @yucca/client preview",
    "server:dev": "pnpm --filter @yucca/server dev",
    "server:build": "pnpm --filter @yucca/server build",
    "server:start": "pnpm --filter @yucca/server start",
    "shared:dev": "pnpm --filter @yucca/shared dev",
    "shared:build": "pnpm --filter @yucca/shared build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/node": "24.10.0"

  },
  "engines": {
    "node": "20.11.0",
    "pnpm": "9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "author": "Sergei Mozhaev <mozhaev.dev@gmail.com>",
  "license": "MIT"
}
